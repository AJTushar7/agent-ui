modules = ["nodejs-20", "web"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Angular App"

[[workflows.workflow]]
name = "Angular App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "ng serve"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 42381
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["npx", "serve", "-s", "dist/agent-ui"]
build = ["npm", "run", "build"]
